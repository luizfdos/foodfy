{% extends "layout.njk" %}

{% block content %}
    <main class="recipes">

        <div id="recipe">

            <div class="recipe-image">
                <img src="{{recipe.image}}" alt="">
            </div>

            <div class="recipe-content">
               <h1>{{recipe.title}}</h1>
                <p class="author">por {{recipe.author}}</p>
            </div>

            <div class="ingredients">
                <div class="title">
                    <h2>Ingredientes</h2>
                    <a>ESCONDER</a>
                </div>
                <ul>
                    {% for ingredient in recipe.ingredients %}
                    <li>{{ingredient}}</li>
                    {% endfor %}
                </ul>

            </div>
            
            <div class="preparation hide">

                <div class="title">
                    <h2>Modo de preparo</h2>
                    <a>MOSTRAR</a>
                </div>
                
                <ul>
                    {% for preparationstep in recipe.preparation %}
                    <li>{{preparationstep}}</li>
                    {% endfor %}
                </ul>
                
            </div>
        {% if recipe.information != '' %}
            <div class="information hide">
                <div class="title">
                    <h2>Informações adicionais</h2>
                    <a>MOSTRAR</a>
                </div>
                    <p>{{recipe.information.replace('\n', '<br><br>')}}</p>
            </div>
            
        </div>
        {%endif%}
    </main>
<script src="../scripts.js"></script>

{% endblock %}